- if @pages > 1
  .pagination
    %ul
      - if @page > 1
        %li
          %a{:href => "#{@page-1}"} Prev
      - [1..@pages].each do |page|
        %li
          %a{:href => "/#{request.path_info}/#{page}"}= page
      - if @page < @pages.count
        %li
          %a{:href => "#{@page+1}"} Next

%table.table
  %thead
    %tr
      %td Title
      %td Date
  %tbody
    - @articles.each do |article|
      %tr
        %td
          %a{:href => article.permalink}= article.title
        %td= article.date.strftime("%B %d, %Y")